@import 'nib'
@import 'nib/gradients'

body 
  margin: 0
  background: white
  

#header
  width: 100%
  height: 140px
  background: #222
  overflow: visible

  span#headerAccent
    width: 100%
    height: 1px
    display: inline-block
    background: linear-gradient(left, #02e0d8, #2b87f0);

  img#logo
    position: relative
    margin: 54px auto
    display: block

#main
  width: 660px
  margin: 120px auto
  text-align: center

  #mainTitle
    text-align: center

  h1, h2, h3  
    font-family: "HelveticaNeue-Light", "Helvetica Neue Light", "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif; 
    font-weight: 300;

  .momentousButtons
    margin: 0 auto
    width: 440px

  .mtbtn
    background: #222
    padding: 6px 30px
    border-radius: 4px
    color: white
    font-weight: 300
    letter-spacing: .2em
    margin: 10px 2px
    display: inline-block
    text-decoration: none
    font-size: 10px
    text-transform: uppercase

  .footerText
    font-size: 11px


